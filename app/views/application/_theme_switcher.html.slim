label.swap.swap-rotate
  input#theme-switcher.theme-controller(
    type="checkbox"
    value=@themes[:dark]
    data-controller="themes"
    data-action="click->themes#switch"
    data-themes-light-value=@themes[:light]
    data-themes-dark-value=@themes[:dark]
  )

  span.swap-on title=t('.switch_to_dark')
    = lucide_icon 'sun', class: 'h-6 w-6 fill-current'

  span.swap-off title=t('.switch_to_light')
    = lucide_icon 'moon', class: 'h-6 w-6 fill-current'
